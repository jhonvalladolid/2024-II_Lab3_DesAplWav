<div class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">CREAR PRODUCTO</h3>
                </div>
                <div class="card-body">
                    <form action="/addProduct" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Nombre del producto" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="category" class="input-group-text">Categoría</label>
                            <input class="form-control" type="text" name="categoria" id="categoria" placeholder="Categoría del producto" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="price" class="input-group-text">Precio</label>
                            <input class="form-control" type="number" step="0.01" name="precio" id="precio" placeholder="Precio del producto" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="quantity" class="input-group-text">Cantidad</label>
                            <input class="form-control" type="number" name="cantidad" id="cantidad" placeholder="Cantidad disponible" required>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Guardar</button>
                            <button class="btn btn-danger">
                                <a class="nav-link link-light" aria-current="page" href="/listProduct">Cancelar</a>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
